{
  "name": "koa-typeorm-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for using koa with ts and typeorm",
  "private": true,
  "author": "fadedDexofan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fadedDexofan/koa-typeorm-boilerplate"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "cross-env NODE_ENV=development npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "test": "npm run unit:test && npm run e2e:test",
    "unit:test": "cross-env NODE_ENV=test npm run build-ts && mocha ./dist/db/repositories/*.test.js --timeout 5000 --exit",
    "e2e:test": "cross-env NODE_ENV=test npm run build-ts && mocha ./dist/app/controllers/**/*.controller.test.js --timeout 5000 --exit"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "config": "^1.30.0",
    "dotenv": "^5.0.1",
    "jsonwebtoken": "^8.2.1",
    "kcors": "^2.2.1",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "typedi": "^0.7.3",
    "typeorm": "^0.2.6",
    "typeorm-typedi-extensions": "^0.2.1",
    "winston": "github:winstonjs/winston"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/chai": "^4.1.3",
    "@types/chai-http": "^3.0.4",
    "@types/config": "0.0.34",
    "@types/dotenv": "^4.0.3",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/koa": "^2.0.45",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.28",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.1.3",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "cross-env": "^5.1.6",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "supertest": "^3.1.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^2.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tslint"
    }
  }
}
